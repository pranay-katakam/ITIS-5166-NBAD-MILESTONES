<%- include('../partials/header.ejs')%>
    <div class="container">
        <form action="/connection" method="POST" id="simple-forms">
            <div id="row">
                <label>Event Name</label>
                <input type="text" id="leagueName-input" name="connectionName" placeholder="Enter the Event Name"
                    >
            </div>
            <div>
                <label>Event Title</label>
                <input type="text" id="title-input" name="connectionTopic" placeholder="Enter the Tilte" >
            </div>
            <div id="inputs">
                <label>Host</label>
                <input type="text" id="host-input" name="hostName" placeholder="Enter Host's Name" >
            </div>
            <div>
                <label>Details</label>
                <textarea rows="10" cols="50" name="details" ></textarea>
            </div>
            <div>
                <label>Location</label>
                <input type="text" id="where-input" name="location" placeholder="Enter the location" >
            </div>
            <div>
                <label>When</label>
                <input type="date" data-date-inline-picker="true" id="when-input" name="date" data-polyfill="all"
                    >
            </div>
            <div>
                <label>Start time</label>
                <input type="datetime-local" name="startTime" minlength="1" maxlength = "12" id="start-input" >
            </div>
            <div>
                <label>End time</label>
                <input type="datetime-local" name="endTime" minlength="1" maxlength = "12" id="end-input" >
            </div>
            <div>
                <label>Image URL</label>
                <input type="text" id="imageurl" name="imageurl" placeholder="imageurl" >
            </div>
            <input type="submit" id="button-margin" class="button-margin">
            <br /><br /><br /><br /><br />
        </form>

    </div>
    <%- include('../partials/footer.ejs')%>